<div class="container">
  <h2><%= link_to "Home", cocktails_path, class: "btn btn-outline-secondary", id: "second" %></h2>

  <h2>Add a new cocktail</h2>

  <%= simple_form_for [ @cocktail ] do |f| %>
    <%= f.input :name %>
    <%= f.input :cdescription %>
<!--     <%= f.input :image_url %> -->
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.submit "Add", class: "btn btn-primary", id: "primary" %>
  <% end %>
</div>
