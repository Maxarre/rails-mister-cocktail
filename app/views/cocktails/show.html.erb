<div class="container">
  <h2><%= link_to "Home", cocktails_path, class: "btn btn-secondary" %></h2>

  <h1><%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name  %> : <%= dose.description %> <%= link_to "Delete Ingredient", dose_path(dose), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>

  <p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %></p>
</div>
