<div class="container">
  <h2><%= link_to "Home", cocktails_path, class: "btn btn-outline-secondary", id: "second" %></h2>

  <h1><%= @cocktail.name %></h1>
  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
  <ul>
    <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name  %> : <%= dose.description %> <%= link_to "Delete Ingredient", dose_path(dose), method: :delete, class: "btn btn-outline-danger", id: "danger", data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
  </ul>

  <p><%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-primary", id: "primary" %></p>
</div>
