<h1>Cocktails</h1>
<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm">
    <div class="card" style="width: 18rem;">
      <img src="<%= cocktail.image_url %>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text"><%= cocktail.cdescription %></p>
        <a href="#"><%= link_to 'Recipe', cocktail_path(cocktail), class: "btn btn-outline-secondary" %></a>
        <a href="#"><%= link_to 'Delete Cocktail', cocktail_path(cocktail), method: :delete, class: "btn btn-outline-danger", data: { confirm: "Are you sure?" } %></a>
      </div>
    </div>
    </div>
  <% end %>
  </div>

<p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
</div>
