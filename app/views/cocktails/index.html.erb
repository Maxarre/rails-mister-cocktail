<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path("cocktails_banner") %>)">
  <div class="container">
    <h1>Mister Cocktail</h1>
    <p>Keep Calm and have a Cocktail</p>
  </div>
</div>

<div class="container">
  <h1>Cocktails</h1>
  <p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary", id: "primary" %></p>
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm">
    <div class="card" style="width: 18rem;">
      <%= cl_image_tag cocktail.photo, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= cocktail.name %></h5>
        <p class="card-text"><%= cocktail.cdescription %></p>
        <%= link_to 'Recipe', cocktail_path(cocktail), class: "btn btn-outline-secondary", id: "second" %>
        <%= link_to 'Delete Cocktail', cocktail_path(cocktail), method: :delete, class: "btn btn-outline-danger", id: "danger", data: { confirm: "Are you sure?" } %>
      </div>
    </div>
    </div>
  <% end %>
  </div>
</div>
