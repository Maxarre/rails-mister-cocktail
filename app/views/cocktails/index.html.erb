<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>
  <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3><p><%= link_to "Delete Cocktail", cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>

<p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary button-add" %></p>
